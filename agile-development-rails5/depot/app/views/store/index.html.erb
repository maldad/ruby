<p id="notice"><%= notice %></p>
<h1>The Catalog</h1>

<% cache @products do %>
  <% @products.each do | product | %>
    <% cache product do %>
      <div class="entry">
        <%= image_tag(product.image_url) %>
        <h3><%= product.title %></h3>
        <%= sanitize(product.description) %>
        <div class="price_line">
          <span class="price">Price is: <%= number_to_currency(product.price) %></span>
          <%= button_to 'Agregar al carrito', line_items_path(product_id: product), remote: true%>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
